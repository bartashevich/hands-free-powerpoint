<Window x:Class="Microsoft.Samples.Kinect.DiscreteGestureBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Microsoft.Samples.Kinect.DiscreteGestureBasics"
        Title="gestureModality"
        Height="80" Width="265"
        Closing="MainWindow_Closing"
        WindowStyle="None">
    <Grid>
        <Button Content="?"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="15"
                Click="Button_Help"/>
        <Ellipse x:Name="circle" Width="15" Height="15" HorizontalAlignment="left" VerticalAlignment="Top" Fill="Gray" Margin="28,14,0,0"></Ellipse>
        <Ellipse x:Name="mouse_status" Width="15" Height="15" HorizontalAlignment="left" VerticalAlignment="Top" Fill="Gray" Margin="28,38,0,0"></Ellipse>
        <Label x:Name="confidence_percentage" HorizontalAlignment="Right" Height="30" Margin="0,7,0,0" Content="Max confidence: 0 %" VerticalAlignment="Top" Width="177" FontSize="14" BorderThickness="0"/>
        <Label x:Name="gesture_name" HorizontalAlignment="Right" Height="30" Margin="0,31,0,0" Content="Gesture: -" VerticalAlignment="Top" Width="177" FontSize="14" BorderThickness="0"/>
    </Grid>
</Window>
